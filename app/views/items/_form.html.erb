<%= form_for(@item, :html => {:class => 'form-horizontal', :role => 'form' }) do |f| %>

        <% if @item.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@item.errors.count, 'error') %> prohibited this item from being saved:</h2>

                <ul>
                <% @item.errors.full_messages.each do |msg| %>
                   <li><%= msg %></li>
                <% end %>
                </ul>
            </div>
        <% end %>

    <div class="form-group">
      <%= f.label :barcode %>
      <%= f.text_field :barcode, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :location %>
      <%= f.select :location, options_for_select(['Aisle 1','Aisle 2','Aisle 3','Aisle 4',
                                                  'Aisle 5','Aisle 6','Aisle 7','Aisle 8',
                                                  'Aisle 9','Aisle 10','Aisle 11','Aisle 12']), class: 'form-control' %>
    </div>
    <div class="well">
      <%= f.submit 'Submit', class: 'btn btn-default' %>
    </div>
<% end %>
