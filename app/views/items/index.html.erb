<h1>Listing items</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Barcode</th>
    <th>Name</th>
    <th>Price</th>
    <th>Location</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @items.each do |item| %>
      <tr>
        <td><%= item.barcode %></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.location %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
